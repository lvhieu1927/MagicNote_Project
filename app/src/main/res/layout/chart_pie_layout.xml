<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_positive"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chart_border_count"
                android:textColor="@color/mauchu"
                android:textSize="@dimen/text_medium"
                android:fontFamily="@font/font_1_dancingscript_regular"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                >
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:padding="20dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:text="@string/PieChart"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                >
                <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/linechart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/empty_LineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_diary_data_notfound"
                    />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingTop="20dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:text="@string/LineChart"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_chart_border_count"
                    >
                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img1"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_happy2"
                                />
                            <TextView
                                android:id="@+id/textview1"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/img1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:textColor="@color/mauchu"
                                android:textSize="@dimen/text_large"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_good2"
                                android:id="@+id/img2"
                                android:layout_centerHorizontal="true"
                                />
                            <TextView
                                android:id="@+id/textview2"
                                android:layout_below="@id/img2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/mauchu"
                                android:textSize="@dimen/text_large"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_neutral2"
                                android:layout_centerHorizontal="true"

                                />
                            <TextView
                                android:id="@+id/textview3"
                                android:layout_below="@id/img3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/mauchu"
                                android:textSize="@dimen/text_large"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_sad2"
                                android:layout_centerHorizontal="true"
                                />
                            <TextView
                                android:id="@+id/textview4"
                                android:layout_below="@id/img4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/mauchu"
                                android:textSize="@dimen/text_large"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_bad2"
                                android:layout_centerHorizontal="true"
                                />
                            <TextView
                                android:layout_below="@id/img5"
                                android:id="@+id/textview5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:textColor="@color/mauchu"
                                android:textSize="@dimen/text_large"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:layout_centerHorizontal="true"
                                />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="italic"
                        android:layout_marginBottom="8dp"
                        android:text="@string/MoodCount"
                        android:layout_alignParentBottom="true"
                        />
                </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
    </ScrollView>
</LinearLayout>