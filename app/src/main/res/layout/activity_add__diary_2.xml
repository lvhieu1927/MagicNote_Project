<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_basex2">

    <TextView
        android:id="@+id/tv_activity"
        android:layout_margin="@dimen/margin_basex2"
        android:text="What activity you doing today?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/text_large"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tv_Social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="social"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/tv_activity"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <HorizontalScrollView
        android:id="@+id/scr_Social"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_Social"
        >
        <LinearLayout
            android:id="@+id/layout_Social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </HorizontalScrollView>
    <TextView
        android:id="@+id/tv_Entertainment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Entertainment"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/scr_Social"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <HorizontalScrollView
        android:id="@+id/scr_Entertainment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_Entertainment" />
    <TextView
        android:id="@+id/tv_Sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Sleep"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/scr_Entertainment"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <HorizontalScrollView
        android:id="@+id/scr_Sleep"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_Sleep" />
    <TextView
        android:id="@+id/tv_Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Food"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/scr_Sleep"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <HorizontalScrollView
        android:id="@+id/scr_Food"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_Food" />
    <TextView
        android:id="@+id/tv_Calm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Calm"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/scr_Food"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <HorizontalScrollView
        android:id="@+id/scr_calm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_Calm" />
    <TextView
        android:id="@+id/tv_Excercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Exercise"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/scr_calm"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <HorizontalScrollView
        android:id="@+id/scr_Excercise"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_Excercise" />
    <TextView
        android:id="@+id/tv_Chores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Chores"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/scr_Excercise"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <HorizontalScrollView
        android:id="@+id/scr_Chores"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_Chores" />




</RelativeLayout>