<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="500px"
            android:layout_gravity="bottom"
            android:background="@drawable/add_diary_1_activity1"
            android:gravity="center"
            android:text="Good evening!\nLet's start with your mood"
            android:textColor="@color/white"


            android:textSize="45px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20px"
        android:layout_marginLeft="0px"
        android:layout_marginTop="10px"
        android:layout_marginEnd="20px"
        android:layout_marginRight="0px"
        android:rotationX="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_scrollUp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <Button
                android:id="@+id/add_diary_button_1"
                android:layout_width="match_parent"
                android:layout_height="283px"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Happy"
                android:backgroundTint="#00ffcc"/>

            <Button
                android:id="@+id/add_diary_button_2"
                android:layout_width="match_parent"
                android:layout_height="283px"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Good"
                android:backgroundTint="#00ff00"/>

            <Button
                android:id="@+id/add_diary_button_3"
                android:layout_width="match_parent"
                android:layout_height="283px"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Neutral"
                android:backgroundTint="#ff33bb"/>

            <Button
                android:id="@+id/add_diary_button_4"
                android:layout_width="match_parent"
                android:layout_height="283px"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="bad"
                android:backgroundTint="#ff6600"/>

            <Button
                android:id="@+id/add_diary_button_5"
                android:layout_width="match_parent"
                android:layout_height="283px"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="awful"
                android:backgroundTint="#ff0000"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>