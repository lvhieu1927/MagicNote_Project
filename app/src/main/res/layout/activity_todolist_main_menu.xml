<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_todolist1"
    tools:context=".todolist_MainMenu_Activity"
    android:id="@+id/layout_main">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/TodolistListView"
                android:textColor="#000"
                android:fontFamily="@font/wildword_roman"
                android:textSize="23sp"
                android:shadowColor="#FFF"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/try_your_best"
            android:textColor="#000"
            android:fontFamily="@font/wildword_roman"
            android:textSize="15sp"/>
            <ListView
                android:id="@+id/lisk_view_task"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="9"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:divider="#0000"
                android:dividerHeight="10dp"
                android:layout_marginTop="10dp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_todolist_data_notfound"
            android:scaleType="centerInside"
            android:padding="70dp"
            android:layout_gravity="center_horizontal|center_vertical"/>
        <ImageButton
            android:id="@+id/button_add_task_form"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:src="@drawable/ic_note_add_black_48dp"
            android:scaleType="centerInside"
            android:background="@drawable/bt_round_button"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:layout_gravity="bottom|center"
            android:onClick="clickButton"/>
        <ImageButton
            android:id="@+id/change_theme_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:src="@drawable/ic_image_blacks_24dp"
            android:scaleType="centerInside"
            android:background="@drawable/bt_round_button"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_gravity="bottom|left"
            android:onClick="clickButton"/>
        <ImageButton
            android:id="@+id/go_to_diary"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:src="@drawable/ic_insert_emoticon_black_24dp"
            android:scaleType="centerInside"
            android:background="@drawable/bt_round_button"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:layout_gravity="bottom|right"
            android:onClick="clickButton"/>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_todolist_splashscreen"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </FrameLayout>
</LinearLayout>