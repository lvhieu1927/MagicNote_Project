<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ln2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_positive"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chart_border_count"
        android:textColor="@color/mauchu"
        android:text="@string/eng_calendar_Choose_Date"
        android:textSize="@dimen/text_medium"
        android:fontFamily="@font/font_1_dancingscript_regular"
        />

    <sun.bob.mcalendarview.MCalendarView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/calendar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/font_1_dancingscript_regular"
        android:textColor="@color/mauchu"
        android:padding="20dp"
        android:text="@string/eng_calendar_Choose_Date"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/add_diary_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_happy2"
            android:background="#00000000"
            android:textSize="20dp"
            />

        <ImageButton
            android:id="@+id/add_diary_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_good2"
            android:background="#00000000"
            />

        <ImageButton
            android:id="@+id/add_diary_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/ic_neutral2"
            />

        <ImageButton
            android:id="@+id/add_diary_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/ic_sad2"
            />

        <ImageButton
            android:id="@+id/add_diary_button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/ic_bad2"
            />
    </LinearLayout>
</LinearLayout>